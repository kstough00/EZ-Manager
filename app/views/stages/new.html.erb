<% if flash[:message] %>
<%= flash[:message] %>
<% end %>

<%= form_for(@stage) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :capacity %>
    <%= f.text_field :capacity %>
    <%= collection_select :stages, :stage_id, Stage.all, :id, :name %>
    <%= f.submit %>
    <% end %>