<% if flash[:message] %>
<%= flash[:message] %>
<% end %>

<%= form_for(@stage) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :performances %>
    <%= f.text_field :performances %>
    <%= collection_select :performances, :stage_id, Artist.all, :id, :name %>
    <%= f.submit %>
    <% end %>