<h2> Create a new Artist! </h2>

<% if flash[:message] %>
<%= flash[:message] %>
<% end %>

<%= form_for(@artist) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
    <%= collection_select :genre, :artist_id, Artist.all, :id, :name %>
    <%= f.submit %>
    <% end %>